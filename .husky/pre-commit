#!/bin/sh

# Check if migrations are being committed
if git diff --cached --name-only | grep -q "^prisma/migrations/"; then
  echo "‚ùå Error: Migration files detected in commit"
  echo "Migrations should be auto-generated by CI workflow"
  echo ""
  echo "To bypass this check (use with caution):"
  echo "git commit --no-verify"
  exit 1
fi

npx lint-staged